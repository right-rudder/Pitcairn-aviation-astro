---
import HomeLayout from "../layouts/HomeLayout.astro";
import { Image } from "astro:assets";
import Passenger from "../assets/passenger-in-a-car.jpg";
import London from "../assets/london.jpg";
import AirplaneWing from "../assets/airplane-wing.jpg";
import FuelPrices from "../components/FuelPrices.jsx";
import Hangar from "../assets/hangar.jpg";
import Airport from "../assets/heritage-field-airport.webp";
import PitcairnFlightAcademyLogo from "../assets/pitcairn-flight-academy-logo.webp";
import PennairLogo from "../assets/pennair-logo.png";
---

<HomeLayout>
  <section
    class="flex overflow-hidden lg:h-96 relative bg-main-red lg:bg-main-red -z-50"
  >
    <div
      class="bg-main-red w-[calc(50%+65rem)] duration-700 ease-in-out h-full -left-24 absolute -skew-x-12 -z-10 slide"
    >
    </div>
    <div
      class="bg-main-red w-[calc(50%+65rem)] duration-700 ease-in-out h-full -left-24 absolute skew-x-12 -z-10 slide"
    >
    </div>
    <div
      class="bg-main-red lg:bg-white w-[calc(50%+3rem)] translate-x-[calc(100%-5rem)] h-full absolute -z-20"
    >
    </div>

    <div
      class="flex py-16 flex-col lg:flex-row max-w-7xl mx-auto h-full lg:items-center lg:gap-72 p-5 justify-center gap-10"
    >
      <h2
        class="lg:flex-1 text-4xl lg:text-5xl text-white uppercase fade-in opacity-0 duration-700"
      >
        Your full service aviation partner
      </h2>
      <div
        class="lg:flex-1 text-white lg:text-black flex flex-col gap-3 fade-left opacity-0 translate-x-10 duration-700 delay-500"
      >
        <p>
          For over 50 years, Pitcairn Aviation LLC has been the trusted
          fixed-base operator (FBO) at Heritage Field Airport (KPTW) in
          Pottstown, PA. Just a short 30-minute flight from Philadelphia, our
          full-service FBO offers a warm welcome and modern amenities for pilots
          and aircraft visiting the scenic southeastern Pennsylvania region.
          From efficient fueling and ground handling to well-appointed lounges
          and hangars, we ensure your stopover is comfortable and hassle-free.
        </p>
      </div>
    </div>
  </section>

  <section class="h-[35rem] relative overflow-hidden">
    <Image
      src={Passenger}
      class="absolute top-0 -z-50 object-cover min-h-[35rem]"
      alt="A description of my image."
    />
    <div
      class="absolute inset-0 bg-black/50 bg-gradient-to-t from-black -z-40 to-40%"
    >
    </div>
    <div
      class="max-w-7xl mx-auto flex flex-col justify-center h-full text-white gap-5 p-5"
    >
      <h2
        class="text-light-red text-sm font-bold uppercase fade-in duration-500 opacity-0 delay-100"
      >
        Services and Team
      </h2>
      <p
        class="text-2xl font-semibold max-w-md fade-in duration-500 opacity-0 delay-200"
      >
        Our Experienced Team is Here to Serve
      </p>
      <p class="max-w-md text-lg fade-in duration-500 opacity-0 delay-300">
        From the moment you land, our friendly team of aviation experts is ready
        to make your visit exceptional. In addition to swift fueling and
        marshaling, we offer a wide range of professional services including
        aircraft detailing, concierge arrangements, crew cars, and more. We aim
        to ensure your every need is met with efficiency and a smile.
      </p>
    </div>
  </section>

  <section class="py-16">
    <div class="max-w-7xl mx-auto p-5 flex flex-col lg:flex-row gap-10">
      <div class="flex-1">
        <Image src={Hangar} class="" alt="A description of my image." />
      </div>
      <div class="flex-1 flex flex-col gap-3 pt-3">
        <h2
          class="text-light-red text-sm font-bold uppercase fade-in duration-500 opacity-0 delay-100"
        >
          Hangar Rentals
        </h2>
        <p
          class="text-2xl font-semibold fade-in duration-500 opacity-0 delay-200"
        >
          Looking for a hangar?
        </p>
        <p class="text-lg fade-in duration-500 opacity-0 delay-300">
          Pitcairn Aviation provides secure hangar facilities to protect your
          aircraft from the elements. Our heated hangars can accommodate
          aircraft up to [maximum dimensions]. Monthly and yearly rental options
          are available.
        </p>
      </div>
    </div>
  </section>

  <section class="h-[35rem] relative overflow-hidden">
    <Image
      src={Airport}
      class="absolute -top-[50%] -z-50 object-cover min-h-[55rem] w-full"
      alt="A description of my image."
    />
    <div
      class="absolute inset-0 bg-black/40 bg-gradient-to-t from-black -z-40 to-40%"
    >
    </div>
    <div
      class="max-w-7xl mx-auto flex flex-col justify-center h-full text-white gap-5 p-5"
    >
      <h2
        class="text-light-red text-sm font-bold uppercase fade-in duration-500 opacity-0 delay-100"
      >
        Heritage Field Airport
      </h2>
      <p
        class="text-2xl font-semibold max-w-md fade-in duration-500 opacity-0 delay-200"
      >
        Visit Heritage Field Airport
      </p>
      <p class="max-w-md text-lg fade-in duration-500 opacity-0 delay-300">
        Experience the award-winning service that's made Pitcairn Aviation a
        trusted name in the region. Plan your visit to Heritage Field (KPTW) and
        discover our beautiful facility tucked into the rolling Pennsylvania
        countryside. Our central location and proximity to Philadelphia make us
        an ideal tech stop.
      </p>
    </div>
  </section>

  <section class="flex overflow-hidden relativebg-white -z-50">
    <div
      class="flex py-16 flex-col max-w-7xl mx-auto h-full lg:items-center p-5 justify-center gap-10"
    >
      <div class="flex flex-col gap-2 text-center">
        <h2 class="text-5xl uppercase text-light-red">
          Other Companies at Heritage Field
        </h2>
        <h3 class="text-base lg:text-lg">
          Heritage Field Airport is also home to several specialized aviation
          businesses to meet all your needs:
        </h3>
      </div>
      <div
        class="lg:text-black flex flex-col lg:flex-row items-center justify-center gap-10 my-10 fade-up delay-100 duration-700 translate-y-10 opacity-0"
      >
        <Image
          src={PitcairnFlightAcademyLogo}
          class="h-auto w-1/2 lg:w-1/4"
          alt="A description of my image."
        />
        <Image
          src={PennairLogo}
          class="h-auto w-1/2 lg:w-1/4"
          alt="A description of my image."
        />
      </div>
      <ul class="text-center">
        <li>
          <strong>Pitcairn Flight Academy:</strong> Providing top-rated pilot training
          and certifications
        </li>
        <li>
          <strong>PennAir Repair:</strong> Experts in aircraft maintenance and inspections
        </li>
        <li>
          <strong>PennJet Charter Services:</strong> Luxury private charter and aircraft
          management
        </li>
      </ul>
    </div>
  </section>

  <section class="bg-main-black py-10 px-5">
    <div class="max-w-7xl mx-auto flex flex-col gap-2">
      <h2 class="text-white text-5xl font-bold">Fuel Prices</h2>
      <h3 class="text-white text-2xl">
        We prioritize keeping our fuel prices competitive for your convenience.
      </h3>
      <FuelPrices client:visible />
      <p class="text-gray-400 self-end">Updated as of 3/20/2024</p>
    </div>
  </section>
</HomeLayout>

<script>
  const fadeUpObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("translate-y-0", "opacity-100");
        entry.target.classList.remove("translate-y-10", "opacity-0");
      }
    });
  });

  const fadeUpElements = document.querySelectorAll(".fade-up");
  fadeUpElements.forEach((element) => {
    fadeUpObserver.observe(element);
  });

  const fadeRightObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("translate-x-0", "opacity-100");
        entry.target.classList.remove("-translate-x-10", "opacity-0");
      }
    });
  });

  const fadeRightElements = document.querySelectorAll(".fade-right");
  fadeRightElements.forEach((element) => {
    fadeRightObserver.observe(element);
  });

  const fadeLeftObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("translate-x-0", "opacity-100");
        entry.target.classList.remove("translate-x-10", "opacity-0");
      }
    });
  });

  const fadeLeftElements = document.querySelectorAll(".fade-left");
  fadeLeftElements.forEach((element) => {
    fadeLeftObserver.observe(element);
  });

  const fadeInObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("opacity-100");
        entry.target.classList.remove("opacity-0");
      }
    });
  });

  const fadeInElements = document.querySelectorAll(".fade-in");
  fadeInElements.forEach((element) => {
    fadeInObserver.observe(element);
  });

  const slideObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("w-[calc(50%+5rem)]");
        entry.target.classList.remove("w-[calc(50%+65rem)]");
      }
    });
  });

  const slideElements = document.querySelectorAll(".slide");
  slideElements.forEach((element) => {
    slideObserver.observe(element);
  });
</script>
