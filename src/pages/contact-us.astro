---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import Passenger from "../assets/passenger-in-a-car.jpg";
import London from "../assets/london.jpg";
import AirplaneWing from "../assets/airplane-wing.jpg";
import FuelPrices from "../components/FuelPrices";
import ServiceCard from "../components/ServiceCard";
import Intro from "../components/Intro.astro";
import Header2 from "../components/Header2.astro";
import AddingFuel from "../assets/adding-fuel.png";
import PrivateJet from "../assets/private-jet-in-hangar.png";
import Section2 from "../components/Section2.astro";
import Section1 from "../components/Section1.astro";
import RentalCar from "../assets/rental-car.png";
import AirportLounge from "../assets/airport-lounge.png";
import JetTowing from "../assets/jet-towing.png";
import SecurityGuards from "../assets/security-guards.png";
import HeroImage from "../assets/view-from-airport.jpg";
import PitcairnTeam from "../assets/pitcairn-team.webp";
---

<BaseLayout>
  <Header2 slot="header" image={AirplaneWing}>
    <Fragment slot="title"
      >Contact <span class="text-light-red">Us</span>
    </Fragment>
  </Header2>
  <section class="relative overflow-hidden">
    <div
      class="lg:flex relative hidden lg:h-screen bg-main-red lg:bg-main-red -z-50"
    >
      <div
        class="bg-main-red w-[calc(50%+65rem)] duration-700 ease-in-out h-full -left-24 absolute -skew-x-6 -z-10 slide pointer-events-auto"
      >
      </div>
      <div
        class="bg-main-red w-[calc(50%+65rem)] duration-700 ease-in-out h-full -left-24 absolute skew-x-6 -z-10 slide pointer-events-auto"
      >
      </div>
      <div
        class="bg-main-red lg:bg-white w-[calc(50%+3rem)] translate-x-[calc(100%-5rem)] h-full absolute -z-20 pointer-events-auto"
      >
      </div>
    </div>

    <div
      class="flex py-16 flex-col w-full lg:flex-row max-w-7xl mx-auto h-full lg:items-center lg:gap-72 bg-zinc-200 lg:bg-transparent p-5 justify-center gap-10 lg:absolute lg:top-0 lg:left-1/2 lg:-translate-x-1/2"
      id="contact-us-form"
    >
      <h2
        class="lg:flex-1 text-4xl lg:text-5xl text-black lg:text-white uppercase fade-in opacity-0 duration-700"
      >
        Please let us know how to best serve you and your aircraft!
      </h2>

      <div
        class="lg:flex-1 text-white lg:text-black flex flex-col gap-3 fade-left opacity-0 translate-x-10 duration-700 delay-500"
      >
        <form>
          <div class="space-y-12">
            <div class="border-b border-gray-900/10 pb-12">
              <div
                class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6"
              >
                <div class="sm:col-span-3">
                  <label
                    for="first-name"
                    class="block px-2 text-sm font-medium leading-6 text-gray-900"
                    >First name</label
                  >
                  <div class="mt-2">
                    <input
                      type="text"
                      name="first-name"
                      id="first-name"
                      autocomplete="given-name"
                      class="block px-2 w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-main-red sm:text-sm sm:leading-6"
                    />
                  </div>
                </div>

                <div class="sm:col-span-3">
                  <label
                    for="last-name"
                    class="block px-2 text-sm font-medium leading-6 text-gray-900"
                    >Last name</label
                  >
                  <div class="mt-2">
                    <input
                      type="text"
                      name="last-name"
                      id="last-name"
                      autocomplete="family-name"
                      class="block px-2 w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-main-red sm:text-sm sm:leading-6"
                    />
                  </div>
                </div>

                <div class="sm:col-span-4">
                  <label
                    for="email"
                    class="block px-2 text-sm font-medium leading-6 text-gray-900"
                    >Email address</label
                  >
                  <div class="mt-2">
                    <input
                      id="email"
                      name="email"
                      type="email"
                      autocomplete="email"
                      class="block px-2 w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-main-red sm:text-sm sm:leading-6"
                    />
                  </div>
                </div>
                <div class="sm:col-span-2">
                  <label
                    for="phone"
                    class="block px-2 text-sm font-medium leading-6 text-gray-900"
                    >Phone</label
                  >
                  <div class="mt-2">
                    <input
                      id="phone"
                      name="phone"
                      type="tel"
                      autocomplete="phone"
                      class="block px-2 w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-main-red sm:text-sm sm:leading-6"
                    />
                  </div>
                </div>
              </div>
            </div>

            <div class="border-b border-gray-900/10 pb-12">
              <!-- <h2 class="text-base font-semibold leading-7 text-gray-900">
                Notifications
              </h2>
              <p class="mt-1 text-sm leading-6 text-gray-600">
                We'll always let you know about important changes, but you pick
                what else you want to hear about.
              </p> -->

              <div class="mt-10 space-y-10">
                <fieldset>
                  <legend class="text-sm font-semibold leading-6 text-gray-900"
                    >Services Interested:</legend
                  >
                  <div class="mt-6 space-y-1">
                    <div class="relative flex gap-x-3">
                      <div class="flex h-6 items-center">
                        <input
                          id="fueling"
                          name="fueling"
                          type="checkbox"
                          class="h-4 w-4 rounded border-gray-300 text-main-red focus:ring-main-red"
                        />
                      </div>
                      <div class="text-sm leading-6">
                        <label for="fueling" class="font-medium text-gray-900"
                          >Fueling</label
                        >
                        <!-- <p class="text-gray-500">
                          Get notified when someones posts a comment on a
                          posting.
                        </p> -->
                      </div>
                    </div>
                    <div class="relative flex gap-x-3">
                      <div class="flex h-6 items-center">
                        <input
                          id="rental-car"
                          name="rental-car"
                          type="checkbox"
                          class="h-4 w-4 rounded border-gray-300 text-main-red focus:ring-main-red"
                        />
                      </div>
                      <div class="text-sm leading-6">
                        <label
                          for="rental-car"
                          class="font-medium text-gray-900">Rental Car</label
                        >
                        <!-- <p class="text-gray-500">
                          Get notified when a candidate applies for a job.
                        </p> -->
                      </div>
                    </div>
                    <div class="relative flex gap-x-3">
                      <div class="flex h-6 items-center">
                        <input
                          id="hangar-rental"
                          name="hangar-rental"
                          type="checkbox"
                          class="h-4 w-4 rounded border-gray-300 text-main-red focus:ring-main-red"
                        />
                      </div>
                      <div class="text-sm leading-6">
                        <label
                          for="hangar-rental"
                          class="font-medium text-gray-900">Hangar Rental</label
                        >
                        <!-- <p class="text-gray-500">
                          Get notified when a candidate accepts or rejects an
                          offer.
                        </p> -->
                      </div>
                    </div>
                    <div class="relative flex gap-x-3">
                      <div class="flex h-6 items-center">
                        <input
                          id="accommodation"
                          name="accommodation"
                          type="checkbox"
                          class="h-4 w-4 rounded border-gray-300 text-main-red focus:ring-main-red"
                        />
                      </div>
                      <div class="text-sm leading-6">
                        <label
                          for="accommodation"
                          class="font-medium text-gray-900"
                          >Hotel / Accommodation Assistance</label
                        >
                        <!-- <p class="text-gray-500">
                          Get notified when a candidate accepts or rejects an
                          offer.
                        </p> -->
                      </div>
                    </div>
                    <div class="relative flex gap-x-3">
                      <div class="flex h-6 items-center">
                        <input
                          id="business-services"
                          name="business-services"
                          type="checkbox"
                          class="h-4 w-4 rounded border-gray-300 text-main-red focus:ring-main-red"
                        />
                      </div>
                      <div class="text-sm leading-6">
                        <label
                          for="business-services"
                          class="font-medium text-gray-900"
                          >Business Services</label
                        >
                        <!-- <p class="text-gray-500">
                          Get notified when a candidate accepts or rejects an
                          offer.
                        </p> -->
                      </div>
                    </div>
                  </div>
                </fieldset>
              </div>
            </div>

            <div class="pb-6">
              <!-- <h2 class="text-base font-semibold leading-7 text-gray-900">
                Notifications
              </h2>
              <p class="mt-1 text-sm leading-6 text-gray-600">
                We'll always let you know about important changes, but you pick
                what else you want to hear about.
              </p> -->

              <div class="mt-10 space-y-10">
                <fieldset>
                  <div class="col-span-full">
                    <label
                      for="about"
                      class="block text-sm font-medium leading-6 text-gray-900"
                      >How can we help?</label
                    >
                    <div class="mt-2">
                      <textarea
                        id="about"
                        name="about"
                        rows="3"
                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                      ></textarea>
                    </div>
                  </div>
                </fieldset>
              </div>
            </div>
          </div>

          <div class="mt-6 flex items-center justify-end gap-x-6">
            <button type="submit" class="btn-red">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </section>
</BaseLayout>

<script src="../scripts/animate-on-scroll.js"></script>
