---
import BaseLayout from "../layouts/BaseLayout.astro";
import AirplaneWing from "../assets/airplane-wing.jpg";
import Header2 from "../components/Header2.astro";
import { PHONE_NUMBER, EMAIL_ADDRESS } from "../consts";
---

<BaseLayout>
  <Header2 slot="header" image={AirplaneWing}>
    <Fragment slot="title"
      >Contact <span class="text-light-red">Us</span>
    </Fragment>
  </Header2>
  <section class="">
    <h2 class="text-4xl lg:text-5xl min-h-72 text-black uppercase duration-700">
      Thank you for contacting us! We will get back to you as soon as possible.
    </h2>
  </section>
  <div class="text-center lg:w-3/5 md:w-4/5">
    <h1 class="font-bold text-4xl py-10">Thank you for contacting us.</h1>

    <!--Container for check-->
    <div class="flex flex-row justify-center">
      <!--circle of check-->
      <div class="bg-green-200 rounded-full py-3 px-4 mb-10">
        <!--check itself-->
        <div class="text-green-700 text-5xl">âœ“</div>
      </div>
    </div>

    <p class="px-5">
      Thank you for contacting Red Arrow Flight Academy. We are looking forward
      to working with you soon. We will review your message and get back with
      you within 1-5 business days. <br /><br />
      You can also give us a call at {PHONE_NUMBER} or email us at {
        EMAIL_ADDRESS
      }
    </p>

    <div class="pt-10 flex flex-row justify-center">
      <a href="/">
        <div class="btn-red mb-10 w-52">HOME</div>
      </a>
    </div>
  </div>
</BaseLayout>
